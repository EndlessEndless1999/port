---
const {title, description, badges, github, link} = Astro.props

import { shields } from "../index.astro"
---
<div class="card">
  <div class="card-header">
    <a href={link}>
        <h4>{title}</h4>
    </a>
        <a href={github} target="_blank" rel="">
        <img
          src={shields.github}
          alt="GitHub Repository"
          style="margin-bottom: 0;"
        />
      </a>
  </div>
  <p>{description}</p>
  <div class="badges">
    {badges && badges.map((badge: string) => (
      <img src={badge} alt="badge" />
    ))}
  </div>
  <hr>
</div>